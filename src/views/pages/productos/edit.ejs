<!DOCTYPE html>
<html lang="es">

<head>
  <%- include ('../../partials/header') %>
</head>

<body>
  <%- include ('../../partials/nav') %>
    <div class="container mt-4">
      <div class="card border-secondary">
        <div class="card-header text-center">Editar Registro</div>
        <div class="card-body">
          <form action="/productos/update" method="POST" enctype="multipart/form-data">
            <input id="codigo" name="codigo" value="<%= producto.codigo %>" hidden />
            <div class="mb-3">
              <label for="nombre" class="form-label">Nombre</label>
              <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1"
                value="<%= producto.nombre %>" />
            </div>
            <div class="mb-3">
              <label for="costo" class="form-label">Costo</label>
              <input type="number" step="any" min="0" class="form-control" id="costo" name="costo" tabindex="1"
                value="<%= producto.costo %>" />
            </div>
            <div class="mb-3">
              <label for="pvp" class="form-label">Pvp</label>
              <input type="number" step="any" min="0" class="form-control" id="pvp" name="pvp" tabindex="1"
                value="<%= producto.pvp %>" />
            </div>
            <div class="mb-3">
              <label for="imagen" class="form-label">Imagen</label>
              <img src="/images/<%= producto.imagen %>" alt="sin imagen" class="form-control">
              <input type="file" class="form-control" id="imagen" name="imagen" tabindex="1" />
            </div>
            <div class="mb-3">
              <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary" tabindex="5">
                  Guardar
                </button>
                <a href="/productos/read" class="btn btn-secondary">Cancelar</a>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include ('../../partials/foot') %>
      <script>
        $(document).ready(() => {
          $("#nombre").focus();
        })
      </script>
</body>

</html>